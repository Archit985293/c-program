#include <stdio.h>

int main() {
    char filename[100];
    FILE *fp;
    char ch;

    // Ask for filename
    printf("Enter filename: ");
    scanf("%s", filename);

    // Try to open file in read mode
    fp = fopen(filename, "r");
    if(fp == NULL) {
        printf("Error: File '%s' does not exist.\n", filename);
        return 1;
    }

    // File exists, read and display content
    printf("Contents of '%s':\n", filename);
    while((ch = fgetc(fp)) != EOF) {
        putchar(ch);
    }

    // Close file
    fclose(fp);
    return 0;
}

#include <stdio.h>

enum UserRole {ADMIN, USER, GUEST};

int main() {
    enum UserRole role;
    int choice;

    printf("Select role:\n0. ADMIN\n1. USER\n2. GUEST\n");
    printf("Enter your choice: ");
    scanf("%d", &choice);

    role = (enum UserRole)choice;

    switch(role) {
        case ADMIN:
            printf("ADMIN: You have full access.\n");
            break;
        case USER:
            printf("USER: You have limited access.\n");
            break;
        case GUEST:
            printf("GUEST: You have read-only access.\n");
            break;
        default:
            printf("Invalid role selected.\n");
    }

    return 0;
}

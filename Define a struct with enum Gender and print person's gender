#include <stdio.h>

// Define enum for Gender
enum Gender {MALE, FEMALE, OTHER};

// Define struct Person
struct Person {
    char name[50];
    int age;
    enum Gender gender;
};

int main() {
    struct Person p;

    // Input person details
    printf("Enter name: ");
    fgets(p.name, sizeof(p.name), stdin);
    p.name[strcspn(p.name, "\n")] = '\0'; // remove newline

    printf("Enter age: ");
    scanf("%d", &p.age);

    int genderChoice;
    printf("Select gender (0: MALE, 1: FEMALE, 2: OTHER): ");
    scanf("%d", &genderChoice);
    p.gender = (enum Gender)genderChoice;

    // Print person details
    printf("\nPerson Details:\n");
    printf("Name: %s\n", p.name);
    printf("Age: %d\n", p.age);

    // Print gender based on enum value
    switch(p.gender) {
        case MALE:
            printf("Gender: MALE\n");
            break;
        case FEMALE:
            printf("Gender: FEMALE\n");
            break;
        case OTHER:
            printf("Gender: OTHER\n");
            break;
        default:
            printf("Gender: Unknown\n");
    }

    return 0;
}

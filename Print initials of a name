#include <stdio.h>
#include <string.h>

int main() {
    char name[200];
    int i;

    printf("Enter your full name: ");
    fgets(name, sizeof(name), stdin);

    name[strcspn(name, "\n")] = '\0';  // remove newline

    printf("Initials: ");

    // Print first character if not space
    if (name[0] != ' ')
        printf("%c", name[0] >= 'a' && name[0] <= 'z' ? name[0] - 32 : name[0]);

    // Print next initials after spaces
    for (i = 1; name[i] != '\0'; i++) {
        if (name[i] == ' ' && name[i + 1] != ' ' && name[i + 1] != '\0') {
            char ch = name[i + 1];
            if (ch >= 'a' && ch <= 'z') 
                ch -= 32; // convert to uppercase
            printf("%c", ch);
        }
    }

    printf("\n");
    return 0;
}

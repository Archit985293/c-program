#include <stdio.h>
#include <string.h>

int main() {
    char name[200];
    int i, start = 0, len;

    printf("Enter your full name: ");
    fgets(name, sizeof(name), stdin);
    name[strcspn(name, "\n")] = '\0';  // Remove newline

    len = strlen(name);

    printf("Output: ");

    // Print first initial
    if (name[0] != ' ')
        printf("%c ", name[0] >= 'a' && name[0] <= 'z' ? name[0]-32 : name[0]);

    // Find and print initials except last word
    int lastSpaceIndex = -1;
    for (i = 0; i < len; i++) {
        if (name[i] == ' ')
            lastSpaceIndex = i;
    }

    // Print middle initials (before surname)
    for (i = 1; i < lastSpaceIndex; i++) {
        if (name[i] == ' ' && name[i+1] != ' ') {
            char ch = name[i+1];
            if (ch >= 'a' && ch <= 'z') ch -= 32;
            printf("%c ", ch);
        }
    }

    // Print surname in full
    for (i = lastSpaceIndex + 1; i < len; i++)
        printf("%c", name[i]);

    printf("\n");
    return 0;
}

#include <stdio.h>

int main() {
    int n = 5;  // number of rows

    for (int i = 0; i < n; i++) {
        // print spaces
        for (int j = 0; j < i; j++) {
            printf(" ");
        }

        // print stars
        for (int j = n; j > i; j--) {
            printf("*");
        }

        printf("\n");
    }

    return 0;
}

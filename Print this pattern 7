#include <stdio.h>

int main() {
    int n = 4; // number of rows in the top half (including middle row)

    // Top half
    for (int i = 1; i <= n; i++) {
        int spaces = n - i;
        int stars = 2 * i - 1;

        // print leading spaces
        for (int s = 1; s <= spaces; s++) {
            printf(" ");
        }

        // print stars
        for (int j = 1; j <= stars; j++) {
            printf("*");
        }

        printf("\n");
    }

    // Bottom half
    for (int i = n - 1; i >= 1; i--) {
        int spaces = n - i;
        int stars = 2 * i - 1;

        // print leading spaces
        for (int s = 1; s <= spaces; s++) {
            printf(" ");
        }

        // print stars
        for (int j = 1; j <= stars; j++) {
            printf("*");
        }

        printf("\n");
    }

    return 0;
}

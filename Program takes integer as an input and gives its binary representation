#include <stdio.h>

int main() {
    int num, temp;
    int binary = 0, place = 1;

    printf("Enter a number: ");
    scanf("%d", &num);

    temp = num;

    while (temp > 0) {
        int digit = temp % 2;      // Get last binary digit
        binary = binary + digit * place; // Build the binary number
        place *= 10;
        temp /= 2;
    }

    printf("Binary representation of %d is %d\n", num, binary);

    return 0;
}

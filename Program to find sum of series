#include <stdio.h>

int main() {
    int n;
    float sum = 0.0;

    printf("Enter number of terms: ");
    scanf("%d", &n);

    int numerator = 1;
    int denominator = 2;

    for (int i = 1; i <= n; i++) {
        if (i == 1) {
            sum += 1;   // first term is 1 (given)
        } else {
            sum += (float)numerator / denominator;
        }

        numerator += 2;     // next odd number
        denominator += 2;   // next even number
    }

    printf("Sum of the series = %.4f\n", sum);

    return 0;
}

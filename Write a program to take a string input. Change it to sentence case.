#include <stdio.h>
#include <ctype.h>
#include <string.h>

int main() {
    char str[200];
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    // Remove newline if present
    str[strcspn(str, "\n")] = '\0';

    int n = strlen(str);

    if(n > 0) {
        // Convert first character to uppercase
        str[0] = toupper(str[0]);

        // Convert remaining characters to lowercase
        for(int i = 1; i < n; i++) {
            str[i] = tolower(str[i]);
        }
    }

    printf("%s\n", str);

    return 0;
}

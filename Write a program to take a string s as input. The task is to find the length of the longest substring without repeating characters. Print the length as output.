#include <stdio.h>
#include <string.h>

int main() {
    char s[200];
    printf("Enter the string: ");
    fgets(s, sizeof(s), stdin);
    s[strcspn(s, "\n")] = '\0';  // remove newline

    int n = strlen(s);
    int maxLen = 0;

    for(int i = 0; i < n; i++) {
        int visited[256] = {0}; // ASCII characters
        int length = 0;

        for(int j = i; j < n; j++) {
            if(visited[(unsigned char)s[j]])
                break; // character repeated
            visited[(unsigned char)s[j]] = 1;
            length++;
        }

        if(length > maxLen)
            maxLen = length;
    }

    printf("%d\n", maxLen);

    return 0;
}

#include <stdio.h>

int main() {
    int num, digit;
    long long product = 1;  // Use long long in case product gets large
    int hasOdd = 0;         // Flag to check if there is any odd digit

    printf("Enter a number: ");
    scanf("%d", &num);

    // Handle negative numbers
    if (num < 0) {
        num = -num;
    }

    if (num == 0) {
        printf("The product of odd digits is 0\n");
        return 0;
    }

    while (num > 0) {
        digit = num % 10;
        if (digit % 2 != 0) {  // Check if digit is odd
            product *= digit;
            hasOdd = 1;
        }
        num /= 10;
    }

    if (hasOdd) {
        printf("The product of odd digits is %lld\n", product);
    } else {
        printf("There are no odd digits in the number.\n");
    }

    return 0;
}

#include <stdio.h>
#include <math.h>

int main() {
    int num, first, last, digits, result;

    printf("Enter a number: ");
    scanf("%d", &num);

    if (num < 0) {  // handle negative numbers
        printf("Please enter a positive number.\n");
        return 1;
    }

    last = num % 10;  // last digit
    digits = (int)log10(num);  // number of digits - 1
    first = num / pow(10, digits);  // first digit

    // If number has only one digit, swapping has no effect
    if (digits == 0) {
        result = num;
    } else {
        // Remove first and last digits from original number
        result = num % (int)pow(10, digits);  // remove first digit
        result = result / 10;                // remove last digit

        // Construct new number with swapped digits
        result = last * pow(10, digits) + result * 10 + first;
    }

    printf("Number after swapping first and last digits: %d\n", result);

    return 0;
}
